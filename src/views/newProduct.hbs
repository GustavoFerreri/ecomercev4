<div class="container">
    <div class="col-7">
        <div class="card" style="width: 30rem; margin-top: 60px;">
        <div class="card-body">
                <h5 class="card-title">Cargar nuevos productos</h5>
                <form action="http://localhost:8080/products/" method="POST" id="formProduct">
                    <div class="form-group">
                            <input type="text" id="title" name="title" placeholder="Coloque el Titulo" class="form-control" style="padding: 20px; margin-top: 5px;">
                            <input type="text" id="price" name="price" placeholder="Coloque el Precio" class="form-control" style="padding: 20px; margin-top: 5px;"> 
                            <input type="text" id="img" name="img" placeholder="Coloque la ruta de la imagen" class="form-control" style="padding: 20px; margin-top: 5px;">
                            <input type="text" id="description" name="description"  placeholder="Agregue una breve descipcion" class="form-control" style="padding: 20px; margin-top: 5px;">
                            <button class="btn btn-primary" id="btnCreate" style="padding: 20px; margin-top: 15px;">Cargar nuevo producto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.querySelector('#formProduct').addEventListener('submit', (e) => e.preventDefault())
    document.querySelector('#btnCreate').addEventListener('click', () => document.querySelector('form').submit())
</script>